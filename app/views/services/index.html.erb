<div class="container">

<h3>Services</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
       
        <td><%= link_to 'Edit', edit_service_path(service), class:"waves-effect waves-light btn", id:"btn-small" %>|
          <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' }, class:"waves-effect waves-light btn", id:"btn-small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service', new_service_path , class:"waves-effect waves-light btn"%>

</div>
