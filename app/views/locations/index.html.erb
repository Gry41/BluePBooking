<div class="container">
<h3>Locations</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= link_to 'Edit', edit_location_path(location) , class:"waves-effect waves-light btn", id:"btn-small"%>|
          <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } , class:"waves-effect waves-light btn", id:"btn-small"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path , class:"waves-effect waves-light btn"%>
</div>