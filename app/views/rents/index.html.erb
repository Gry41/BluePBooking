                        <%= link_to 'Edit', edit_rent_path(rent), class:"waves-effect waves-light btn", id: "btn-small" %>      
                        <%end%>
                      </div>
                  <div class="col s6">
                      <%= link_to 'Show', rent, class:"waves-effect waves-light btn", id: "btn-small", data: {turbolinks: false} %>      
                  </div>
                  
                  
                
                </div>
                     </div>
            </div>
            
          
        </div>
