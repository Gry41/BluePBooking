    padding: 8px 16px;
    text-decoration: none;
}
  .pagination em.current{
    background-color: #059efa;
    padding: 8px 16px;
    color: white;
}

.pagination a:hover:not(.current):not(.previous_page):not(.next_page) {background-color: #ddd;}
</style>

<script>
