<div class="container">
<h3>Facilities</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facilities.each do |facility| %>
      <tr>
        <td><%= facility.name %></td>
        <td><%= link_to 'Edit', edit_facility_path(facility),class:"waves-effect waves-light btn", id:"btn-small" %>|
        <%= link_to 'Destroy', facility, method: :delete, data: { confirm: 'Are you sure?' } ,class:"waves-effect waves-light btn", id:"btn-small"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facility', new_facility_path ,class:"waves-effect waves-light btn"%>
    
</div>
<br><br><br>