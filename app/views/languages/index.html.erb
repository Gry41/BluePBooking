<div class="container"?>
<h3>Languages</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= link_to 'Edit', edit_language_path(language), class:"waves-effect waves-light btn", id:"btn-small" %>|
          <%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' }, class:"waves-effect waves-light btn", id:"btn-small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Language', new_language_path , class:"waves-effect waves-light btn"%>
</div>