
<%= image_tag("user.png", :class => "style_image") %>


<div class="row">
  <div class="col s5"></div>
  <div class="col s2">
    <center>

        
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
<br>
<div class="input-field">
      
    <%= f.email_field :email, autofocus: true, id: "email_" %>
    <label for="email_" class="active">Email</label>
  </div>

  <div class="input-field">
    
    <%= f.password_field :password, autocomplete: "off", id:"password_" %>
    <label for="password_" class="active">Password</label>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"waves-effect waves-light btn"%>
  </div>
<% end %>

    </center>

  </div>
</div>
